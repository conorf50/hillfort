<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="org.cfarrell.hillfort">

  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

  <application
    android:name="org.cfarrell.hillfort.main.MainApp"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity android:name="org.cfarrell.hillfort.activities.HillfortActivity"></activity>
    <activity android:name="org.cfarrell.hillfort.activities.HillfortListActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <meta-data
      android:name="com.google.android.geo.API_KEY"
      android:value="@string/google_maps_key" />

    <activity
      android:name="org.cfarrell.hillfort.activities.MapsActivity"
      android:label="@string/title_activity_maps"></activity>

    <!--fixes connection on newer android versions-->
    <uses-library
      android:name="org.apache.http.legacy"
      android:required="false" />

  </application>

</manifest>